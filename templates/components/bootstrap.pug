mixin row()
	| <!-- Begin Row -->
	div&attributes(attributes).row
		block
	| <!-- End Row -->

mixin rowc()
	| <!-- Begin (clearfixed) Row -->
	+row&attributes(attributes).clearfix
		block
	| <!-- End (clearfixed) Row -->

mixin row-test(str)
	| <!-- Begin (clearfixed) Row -->
	if str
		strong Value of str:
		p
			!=str
	+row&attributes(attributes).clearfix
		block
	| <!-- End (clearfixed) Row -->

mixin row-section(title, content, align)
	| <!-- Begin #{title} section -->
	.service-item-2.item_top(style="opacity: 1; top: 0px;")
		if align
			div(class='content-' + align)
		else
			.content-left
			h5.uppercase title
			p content
	| <!-- End #{title} section -->


mixin section2(title, summary, size)
	| <!-- Begin #{title} section -->
	section.section-content.new-line.killPadBottom(id=title)
		.container
			.row
				div(class= size ? 'col-md-' + size : 'no-size')
					| <!-- Begin Section Title -->
					.section-title.item_bottom.text-center
						h1.uppercase title
						b.v-line-md
						h4.weight-300 summary
					| <!-- End Section Title -->
			.row.clearfix
				div(class='col-md-' + size + ' col-sm-' + size + ' col-xs-' + size )
					.service-item-2.item_top(style="opacity: 1; top: 0px;")
						div
							h5.uppercase 'Full Width'
							p 'This should be full width'
	| <!-- End #{title} section -->

