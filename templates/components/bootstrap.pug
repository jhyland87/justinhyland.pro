mixin head(size)
	- var elem = 'h' + size
	#{elem}()&attributes(attributes)
		block

mixin text(type, elem)
	if ! lists.texts.elements.includes( elem )
		- elem = "p"

	if ! type || ! lists.texts.classes.includes( type )
		- type = lists.texts.default

	#{elem}&attributes(attributes)(class="text-"+type)
		block

mixin help(text)
	+text('primary','p').help-block
		!= text

//- Section elements
mixin section-title(title, summary, vline)
	| <!-- Begin Section Title: #{title} -->
	.col-md-12
		.section-title.item_bottom.text-center
			h1.uppercase 
				!=title
			if vline == true
				b.v-line-md
			h4.weight-300 
				!=summary
	| <!-- End Section Title: #{title} -->


